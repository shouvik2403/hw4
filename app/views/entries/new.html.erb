<div class="container mt-5">
  <h2 class="mb-3">New Entry for <%= Place.find_by({"id" => params["place_id"]})["name"] %> </h2>

  <form action="/entries" method="post" class="mt-4"> 

    <input type="hidden" name="place_id" value="<%= params["place_id"] %>">
    
    <div class="mb-3">
      <label for="title_input" class="form-label">Title</label>
      <input type="text" class="form-control" name="title" id="title_input" required>
    </div>
    
    <div class="mb-3">
      <label for="description_input" class="form-label">Description</label>
      <input type="text" class="form-control" name="description" id="description_input" required>
    </div>
    
    <div class="mb-3">
      <label for="occurred_on_input" class="form-label">Occurred on</label>
      <input type="date" class="form-control" name="occurred_on" id="occurred_on_input" required>
    </div>

    <div class="mb-3">
      <%= form.label "uploaded_image", :class => "form-label" %>
      <%= form.file_field "uploaded_image", :class => "form-control" %>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  
  </form>

</div>
